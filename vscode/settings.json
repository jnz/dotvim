{
    "vim.gdefault": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.easymotion": false,
    "vim.useSystemClipboard": true,
    "vim.leader": ",",
    "vim.handleKeys": { "<C-f>": false },
    "vim.insertModeKeyBindings": [
       {
      "before": ["j", "j"],
      "after": ["<Esc>"]
       } 
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "enter"
            ],
            "commands": [ ":nohl" ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "commands": [ "workbench.action.tasks.build" ]
        },        
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [
                "<leader>",
                "g"
            ],
            "commands": [ "workbench.action.findInFiles" ]
        },
        {
            "before": [
                "<leader>", "c", "s"
            ],
            "commands": [ "editor.action.commentLine" ]
        },
        {
            "before": [
                "<leader>", "w"
            ],
            "commands": [ "editor.action.trimTrailingWhitespace" ]
        },
        {
            "before": [
                "<leader>", "t"
            ],
            "commands": [ "editor.action.revealDefinition" ]
        },
        {
            "before": [
                "<leader>", "f"
            ],
            "commands": [ "workbench.view.explorer" ]
        },
        {
            "before": [
                "<leader>", "e"
            ],
            "commands": [ "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup" ]
        },
        // Use > in Keyboard Shortcut Window (C-K C-S) to see command
        // Or go to: https://vscode-docs.readthedocs.io/en/stable/customization/keybindings/
        // https://kapeli.com/cheat_sheets/Visual_Studio_Code.docset/Contents/Resources/Documents/index

        // {
        //     "before": [
        //         "<space>"
        //     ],
        //     "after": [ "<C-d>" ]
        // },
        // {
        //     "before": [
        //         "<S-Space>"
        //     ],
        //     "after": [ "<C-u>" ]
        // },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>", "c", "s"
            ],
            "commands": [ "editor.action.commentLine" ]
        }
    ],
    "editor.inlineSuggest.enabled": true,
    "editor.renderWhitespace": "trailing",
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.tips.enabled": false,
    "editor.minimap.autohide": true,
    "editor.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "debug.console.fontSize": 13,
}
